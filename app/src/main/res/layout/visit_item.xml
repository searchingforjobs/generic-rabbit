<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginBottom="8dp">

	<TextView
		android:id="@+id/textView_name_visit"
		style="@style/TextAppearance.Material3.TitleLarge"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="16dp"
		android:layout_marginTop="16dp"
		android:layout_marginBottom="8dp"
		android:ellipsize="end"
		android:maxLines="1"
		android:text="@string/unknown"
		android:textSize="16sp"
		app:layout_constraintBottom_toTopOf="@id/textView_date_visit"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="Королёв Андрей" />

	<TextView
		android:id="@+id/textView_date_visit"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="16dp"
		android:layout_marginBottom="16dp"
		android:ellipsize="end"
		android:maxLines="1"
		android:textSize="12sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/textView_name_visit"
		tools:text="15.06.2022" />

	<View
		android:id="@+id/view_divider_visit"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginHorizontal="8dp"
		android:layout_marginTop="16dp"
		android:background="@drawable/list_divider"
		app:layout_constraintTop_toBottomOf="@id/textView_date_visit" />


</androidx.constraintlayout.widget.ConstraintLayout>